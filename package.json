{
  "name": "travel-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npx tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "build": "npm install && npm run clean && npm run build:css && npm run copy:files",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "copy:files": "npm run copy:html && npm run copy:assets",
    "copy:html": "copyfiles -u 1 \"src/**/*.html\" dist/",
    "copy:assets": "copyfiles -u 1 \"img/**/*\" \"video/**/*\" dist/",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1"
  }
}
